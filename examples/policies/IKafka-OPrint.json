{
  "name": "policy-kafka",
  "description": "Input kafka, output print",
  "sparkStreamingWindow": 2000,
  "rawData": {
    "enabled": "false",
    "partitionFormat": "day",
    "path": "myTestParquetPath"
  },
  "checkpointPath": "checkpoint",
  "input":
    {
      "name": "in-kafka",
      "type": "Kafka",
      "configuration": {
        "topics": [{"topic": "detector", "partition" : "1"}],
        "zookeeper.connect": [{"host": "localhost", "port": "2181"}],
        "kafkaParams.group.id": "my-spt-grp"
      }
    }
  ,
  "transformations": [
    {
      "name": "morphline",
      "order": 0,
      "type": "Morphlines",
      "outputFields": [
        "appName",
        "timestamp",
        "geo",
        "tag",
        "twitterStatus"
      ],
      "configuration": {
        "morphline": {
          "id": "test1",
          "importCommands": [
            "org.kitesdk.**"
          ],
          "commands": [
            {
              "readJson": {}
            },
            {
              "extractJsonPaths": {
                "paths": {
                  "appName": "/appName",
                  "timestamp": "/timestamp",
                  "geo": "/geo",
                  "tag": "/tag",
                  "twitterStatus": "/twitterStatus"
                }
              }
            }
          ]
        }
      }
    }
  ],
  "cubes": [
    {
      "name": "testCube",
      "checkpointConfig": {
        "timeDimension": "minute",
        "granularity": "minute",
        "interval": 30000,
        "timeAvailability": 60000
      },
      "dimensions": [
        {
          "field": "appName",
          "name": "appName"
        }
      ],
      "operators": [
        {
          "name": "countoperator",
          "type": "Count",
          "configuration": {}
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "out-print",
      "type": "Print",
      "configuration": {}
    }
  ]
}